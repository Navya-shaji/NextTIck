/* Profile button styling */
.user-profile {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px; /* Circular button width */
    height: 50px; /* Circular button height */
    background-color: #000000; /* Black background */
    border-radius: 50%; /* Ensures circular shape */
    overflow: hidden; /* Ensures the image fits within the circle */
    border: 2px solid #ffffff; /* Optional: White border for contrast */
    transition: transform 0.3s;
    cursor: pointer;
}

.user-profile:hover {
    transform: scale(1.1); /* Slight enlargement on hover */
}

/* Profile image styling */
.profile-image {
    width: 100%; /* Ensures the image fills the container */
    height: 100%; /* Ensures the image fills the container */
    object-fit: cover; /* Ensures proper aspect ratio and cropping */
    object-position: center; /* Centers the image */
    border-radius: 50%; /* Keeps the image circular */
}

/* Dropdown menu styling */
.custom-dropdown {
    background-color: #f8f8f8; /* Light off-white background */
