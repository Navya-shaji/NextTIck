    outline-color: #999999; /* Darker outline on hover */
}

.menu-link:active {
    background-color: #dcdcdc; /* Even darker off-white for active state */
    transform: scale(0.95); /* Slightly compresses */
    outline-color: #666666; /* Even darker outline for active state */
}

h6 {
    font-family: 'Arial', sans-serif; /* Modern, clean font */
