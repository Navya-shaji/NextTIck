    text-align: center; /* Centers the text */
    border-bottom: 2px solid #000; /* Adds an underline in blue */
    padding-bottom: 5px; /* Adds spacing under the text */
    display: inline-block; /* Makes the underline fit the text width */
}
.dropdown-toggle {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 50px; /* Adjust the button size */
    height: 50px; /* Adjust the button size */
    background-color: #000000; /* Black background */
    border-radius: 50%; /* Circle shape */
    transition: transform 0.2s, background-color 0.3s;
    border: 2px solid #000000; /* Black border */
    cursor: pointer;
}

.dropdown-toggle img {
    width: 130%; /* Reduces the size of the image */
    height: auto;
    border-radius: 50%; /* Makes the image circular */
    transition: opacity 0.3s; /* Smooth fade effect for image */
}

.dropdown-toggle:hover {
    background-color: #333333; /* Dark gray on hover */
    transform: scale(1.1); /* Slightly enlarges on hover */
}

.dropdown-toggle:active {
    background-color: #555555; /* Lighter gray for active state */
    transform: scale(0.95); /* Slightly compresses on click */
}

.dropdown-toggle img:hover {
    opacity: 0.8; /* Slightly fades the image on hover */
}

