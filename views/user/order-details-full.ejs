<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #070707;
            --secondary-color: #040404;
            --accent-color: #040404;
            --light-gray: #f8f9fa;
            --border-color: #dee2e6;
        }

        body {
            background-color: #f5f5f5;
            font-family: 'Arial', sans-serif;
        }

        .invoice-container {
            max-width: 1000px;
            margin: 2rem auto;
            background: white;
            padding: 2rem;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

        .invoice-header {
            border-bottom: 2px solid var(--border-color);
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .invoice-title {
            color: var(--primary-color);
            font-size: 2rem;
            font-weight: 700;
        }

        .invoice-details {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .details-section {
            background: var(--light-gray);
            padding: 1.5rem;
            border-radius: 8px;
        }

        .details-title {
            color: var(--secondary-color);
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 1rem;
            border-bottom: 1px solid var(--border-color);
            padding-bottom: 0.5rem;
        }

        .table {
            margin-top: 2rem;
            border: 1px solid var(--border-color);
        }

        .table thead th {
            background-color: var(--primary-color);
            color: white;
            padding: 1rem;
            font-weight: 500;
        }

        .table tbody td {
            padding: 1rem;
            vertical-align: middle;
        }

        .table tfoot {
            background-color: var(--light-gray);
            font-weight: 600;
        }

        .product-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 4px;
            border: 1px solid var(--border-color);
        }

        .status-badge {
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-weight: 500;
            text-align: center;
            display: inline-block;
        }

        .status-paid {
            background-color:  #c1fa95;
            color: #040404;
        }

        .status-pending {
            background-color: #c1fa95;
            color: #040404;
        }

        .download-btn {
            background-color: var(--accent-color);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 4px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .download-btn:hover {
            background-color: #070707;
            color: white;
        }

        @media print {
            body {
                background: white;
            }

            .invoice-container {
                box-shadow: none;
                margin: 0;
                padding: 1rem;
            }

            .download-btn {
                display: none;
            }

            .table thead th {
                background-color: #f8f9fa !important;
                color: #333 !important;
                -webkit-print-color-adjust: exact;
            }
        }

        @media (max-width: 768px) {
            .invoice-details {
                grid-template-columns: 1fr;
            }

            .table thead {
                display: none;
            }

            .table tbody td {
                display: block;
                text-align: right;
                padding: 0.5rem;
                border: none;
            }

            .table tbody td::before {
                content: attr(data-label);
                float: left;
                font-weight: bold;
            }

            .table tbody tr {
                border-bottom: 1px solid var(--border-color);
            }
        }
    </style>
</head>
<body>
    <div class="invoice-container">
        <div class="invoice-header">
            <div>
                <p> #<%= order.orderId %></p>
            </div>
            <a href="#" class="download-btn">Download Invoice</a>
        </div>

        <div class="invoice-details">
            <div class="details-section">
                <h3 class="details-title">Order Information</h3>
                <p><strong>Date:</strong> <%= new Date(order.createdOn).toLocaleString() %></p>
                <p><strong>Status:</strong> <%= order.status %></p>
                <p><strong>Payment Status:</strong> 
                    <span class="status-badge <%= order.paymentStatus.toLowerCase() === 'paid' ? 'status-paid' : 'status-pending' %>">
                        <%= order.paymentStatus %>
                    </span>
                </p>
                <p><strong>Payment ID:</strong> <%= order.paymentId || 'N/A' %></p>
            </div>

            <div class="details-section">
                <h3 class="details-title">Shipping Address</h3>
                <% if (address) { %>
                    <p><%= address.name %></p>
                    <p><%= address.addressType %></p>
                    <p><%= address.city %>, <%= address.state %> <%= address.pincode %></p>
                    <p>Landmark: <%= address.landMark || 'N/A' %></p>
                    <p>Phone: <%= address.phone %></p>
                    <% if (address.altPhone) { %>
                        <p>Alt. Phone: <%= address.altPhone %></p>
                    <% } %>
                <% } %>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% order.orderItems.forEach(item => { %>
                    <tr>
                        <tr>
                            <td data-label="Product">
                                <% if (item.product && item.product.productImage && item.product.productImage.length > 0) { %>
                                    <img src="/uploads/re-image/<%= item.product.productImage[0] %>" alt="Product" class="product-img">
                                <% } else { %>
                                    <img src="/uploads/re-image/default-image.jpg" alt="Product" class="product-img">
                                <% } %>
                            </td>
                            <td data-label="Description">
                                <%= item.product ? item.product.productName : 'Product not available' %>
                            </td>
                            <td data-label="Quantity">
                                <%= item.quantity %>
                            </td>
                        </tr>
                        
                        <td data-label="Description"><%= item.product.productName %></td>
                        <td data-label="Quantity"><%= item.quantity %></td>
                        <td data-label="Price">₹<%= item.price.toFixed(2) %></td>
                        <td data-label="Total">₹<%= (item.quantity * item.price).toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-end">Subtotal:</td>
                    <td>₹<%= order.totalPrice.toFixed(2) %></td>
                </tr>
                <tr>
                    <td colspan="4" class="text-end">Discount:</td>
                    <td>₹<%= (order.totalPrice - order.finalAmount).toFixed(2) %></td>
                </tr>
                <tr>
                    <td colspan="4" class="text-end"><strong>Total Amount:</strong></td>
                    <td><strong>₹<%= order.finalAmount.toFixed(2) %></strong></td>
                </tr>
            </tfoot>
        </table>

        <% if (order.couponApplied) { %>
            <p class="mt-3"><strong>Coupon Applied:</strong> Yes</p>
        <% } %>

        <% if (order.returnedByUser) { %>
            <div class="alert alert-danger mt-3">
                <strong>Note:</strong> This order has been returned by the user
            </div>
        <% } %>
    </div>

    <script>
        // Handle PDF download
        document.querySelector('.download-btn').addEventListener('click', (event) => {
            event.preventDefault();
            window.print();
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>