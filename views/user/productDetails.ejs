        let isZoomed = false;
    const ZOOM_LEVEL = 2.5;

    function toggleZoom(e) {
        const container = document.querySelector('.main-image-container');
        const image = document.getElementById('mainImage');
        const zoomed = document.getElementById('zoomed');

        isZoomed = !isZoomed;

        if (isZoomed) {
            container.style.cursor = 'zoom-out';
            zoomed.style.backgroundImage = `url(${image.src})`;
            updateZoomPosition(e, container, zoomed);
        } else {
            resetZoom(container, zoomed);
        }
    }

    function updateZoomPosition(e, container, zoomed) {
        const rect = container.getBoundingClientRect();
        const x = (e.clientX || (e.touches && e.touches[0].clientX)) - rect.left;
        const y = (e.clientY || (e.touches && e.touches[0].clientY)) - rect.top;

        const xPercent = (x / rect.width) * 100;
        const yPercent = (y / rect.height) * 100;

        zoomed.style.backgroundPosition = `${xPercent}% ${yPercent}%`;
        zoomed.style.backgroundSize = `${ZOOM_LEVEL * 100}%`;
        zoomed.style.opacity = '1';
    }

    function resetZoom(container, zoomed) {
        container.style.cursor = 'zoom-in';
        zoomed.style.opacity = '0';
        zoomed.style.backgroundImage = '';
        zoomed.style.backgroundPosition = '';
        zoomed.style.backgroundSize = '';
    }

    document.addEventListener('DOMContentLoaded', function() {
        const container = document.querySelector('.main-image-container');
        const zoomed = document.getElementById('zoomed');

        container.addEventListener('click', toggleZoom);

        container.addEventListener('mousemove', function(e) {
            if (isZoomed) {
                updateZoomPosition(e, container, zoomed);
            }
        });

        container.addEventListener('mouseleave', function() {
            if (isZoomed) {
                isZoomed = false;
                resetZoom(container, zoomed);
            }
        });

        container.addEventListener('touchstart', function(e) {
            e.preventDefault();
            toggleZoom(e);
        });

        container.addEventListener('touchmove', function(e) {
            if (isZoomed) {
                e.preventDefault();
                updateZoomPosition(e, container, zoomed);
            }
        });

        container.addEventListener('touchend', function() {
            if (isZoomed) {
                isZoomed = false;
                resetZoom(container, zoomed);
            }
        });
    });
    </script>
