<%- include("../../views/partials/user/header") %>
<head>
    <link rel="stylesheet" href="/styles/change-password.css">
</head>
<section class="content-main mt-80 mb-80">
   <div class="card mx-auto card-login" style="max-width: 400px;">
       <div class="card-body">
           <h4 class="card-title mb-4 text-center">Change Password</h4>
           <form method="POST" action="/change-password" onsubmit="return validateForm()">
               <div class="mb-3 position-relative">
                   <input class="form-control" name="email" id="email" placeholder="Enter your email" type="email" required style="border: 1px solid #ced4da;">
                   <div id="emailError" class="text-danger position-absolute" style="bottom: -20px; left: 0;"></div>
               </div>
               <div class="mb-4">
                   <button type="submit" class="btn btn-primary w-100">Send OTP</button>
               </div>
               <% if (locals.message && message.length > 0) { %>
                   <div id="alertMessage" class="alert alert-danger text-center">
                       <%= message %>
                   </div>
               <% } %>
           </form>
           <p class="text-center mt-4">Remember your password? <a href="/login">Login</a></p>
       </div>
   </div>
</section>
<script>
function validateForm() {
   let valid = true;
   const email = document.getElementById('email');
   const emailError = document.getElementById('emailError');

   emailError.textContent = '';

   if (!email.value.trim()) {
       emailError.textContent = 'Email cannot be empty.';
       valid = false;
   } else if (!/^\S+@\S+\.\S+$/.test(email.value)) {
       emailError.textContent = 'Please enter a valid email address.';
       valid = false;
   }

   return valid;
}
</script>
