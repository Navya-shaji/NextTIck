<script>
    async function updateQuantity(productId, action) {
        try {
            const response = await fetch('/cart/update-quantity', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId, action }),
            });

            const data = await response.json();

            if (response.status === 200) {
                // Success Alert
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: data.message,
                    timer: 1500,
                    showConfirmButton: false,
                }).then(() => {
                    window.location.reload(); // Reload cart page
                });
            } else {
                // Warning Alert
                Swal.fire({
                    icon: 'warning',
                    title: 'Warning',
                    text: data.message,
                });
            }
        } catch (error) {
            // Error Alert
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to update quantity. Please try again.',
            });
        }
    };

    async function deleteProduct(productId) {
        try {
            const response = await fetch('/cart/deleteProduct', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ productId }),
            });

            const data = await response.json();
            console.log(data);
            if (response.status === 200) {
                // Success Alert
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: data.message,
                    timer: 1500,
                    showConfirmButton: false,
                }).then(() => {
                    window.location.reload(); // Reload cart page
                });
            } else {
                // Warning Alert
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: data.message,
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Failed to remove from cart. Please try again.',
            });
        }
    };
</script>