<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <!-- Include Bootstrap, FontAwesome, and styles -->
</head>
<body>
    <div class="container py-5">
        <h1>Order Details: <%= order.orderId %></h1>
        <hr>
        <div class="row">
            <!-- Left: Order Summary -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">Order Summary</div>
                    <div class="card-body">
                        <p><strong>Status:</strong> <%= order.status %></p>
                        <p><strong>Total Price:</strong> ₹<%= order.totalPrice %></p>
                        <p><strong>Discount:</strong> ₹<%= order.discount %></p>
                        <p><strong>Final Amount:</strong> ₹<%= order.finalAmount %></p>
                        <button class="btn btn-primary w-100" onclick="confirmOrder()">Confirm Order</button>
                    </div>
                </div>
            </div>

            <!-- Right: Items & Address -->
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header">Items</div>
                    <div class="card-body">
                        <% order.orderItems.forEach(item => { %>
                            <div class="d-flex align-items-center mb-3">
                                <img src="<%= item.product.image %>" class="product-img me-3" alt="Product">
                                <div>
                                    <h6><%= item.product.name %></h6>
                                    <small>Quantity: <%= item.quantity %></small><br>
                                    <small>Price: ₹<%= item.price %></small>
                                </div>
                                <div class="ms-auto">
                                    <strong>₹<%= item.price * item.quantity %></strong>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">Shipping Address</div>
                    <div class="card-body">
                        <% if (order.address) { %>
                            <p><strong><%= order.address.name %></strong></p>
                            <p><%= order.address.city %>, <%= order.address.state %> - <%= order.address.pincode %></p>
                            <p>Phone: <%= order.address.phone %></p>
                        <% } else { %>
                            <p>No Address Provided.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Include Bootstrap & Custom JS -->
</body>
</html>
