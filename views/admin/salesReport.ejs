<%- include("../../views/partials/admin/header") %>
<style>
    .pagination-info {
        color: #6c757d;
        font-size: 0.875rem;
    }
    .pagination .page-link {
        padding: 0.375rem 0.75rem;
    }
    .pagination .active .page-link {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }
    .per-page-select {
        width: auto;
        display: inline-block;
    }
</style>
<div class="content-main">
    <div class="content-header d-flex justify-content-between align-items-center">
        <h2 class="content-title">Sales Report</h2>
        <div class="btn-group">
            <button onclick="downloadReport('pdf')" class="btn btn-outline-primary">
                <i class="fas fa-file-pdf"></i> Download PDF
            </button>
            <button onclick="downloadReport('excel')" class="btn btn-outline-success ms-2">
                <i class="fas fa-file-excel"></i> Download Excel
            </button>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mt-4">
        <div class="col-12 col-md-6 col-lg-3 mb-4">
            <div class="card h-100 border-primary">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Total Sales</h6>
                    <h3 class="card-title text-primary">₹<%= totals.finalAmount.toFixed(2) %></h3>
                    <p class="card-text small">After all discounts & deductions</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-lg-3 mb-4">
            <div class="card h-100 border-success">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">Total Orders</h6>
                    <h3 class="card-title text-success"><%= totals.count %></h3>
                    <p class="card-text small">
                        Active: <%= totals.count - totals.cancelledCount - totals.returnedCount %> |
                        Cancelled: <%= totals.cancelledCount %> |
                        Returned: <%= totals.returnedCount %>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4"> 
        <div class="card-body">
            <form id="filter-form" method="GET" class="row g-3 align-items-end">
                <div class="col-12 col-md-3">
                    <label for="period" class="form-label">Time Period</label>
                    <select id="period" name="period" class="form-select">
                        <option value="daily" <%= period === 'daily' ? 'selected' : '' %>>Daily</option>
                        <option value="weekly" <%= period === 'weekly' ? 'selected' : '' %>>Weekly</option>
                        <option value="monthly" <%= period === 'monthly' ? 'selected' : '' %>>Monthly</option>
                        <option value="yearly" <%= period === 'yearly' ? 'selected' : '' %>>Yearly</option>
                        <option value="custom" <%= period === 'custom' ? 'selected' : '' %>>Custom Range</option>
                    </select>
                </div>
                
                <div class="col-12 col-md-3 custom-dates" style="display: none;">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" id="startDate" name="startDate" class="form-control" 
                           value="<%= startDate || '' %>">
                </div>
                
                <div class="col-12 col-md-3 custom-dates" style="display: none;">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" id="endDate" name="endDate" class="form-control" 
                           value="<%= endDate || '' %>">
                </div>
                
                <div class="col-12 col-md-3">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-sync-alt"></i> Update Report
                    </button>
                </div>

                <!-- Hidden pagination fields -->
                <input type="hidden" name="page" value="<%= pagination?.page || 1 %>">
                <input type="hidden" name="limit" value="<%= pagination?.limit || 10 %>">
            </form>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Order ID</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th class="text-end">Amount</th>
                            <th class="text-end">Final Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.orderId %></td>
                            <td><%= new Date(order.createdOn).toLocaleDateString() %></td>
                            <td><%= order.userId?.name || 'N/A' %></td>
                            <td class="text-end">₹<%= order.totalPrice.toFixed(2) %></td>
                            <td class="text-end">₹<%= order.finalAmount.toFixed(2) %></td>
                            <td>
                                <% const statusClass = {
                                    'Delivered': 'success',
                                    'Shipped': 'info',
                                    'Processing': 'primary',
                                    'Cancelled': 'danger',
                                    'Returned': 'warning'
                                }[order.status] || 'secondary' %>
                                <span class="badge bg-<%= statusClass %>"><%= order.status %></span>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>

                <!-- Pagination Controls -->
                <div class="d-flex justify-content-between align-items-center mt-4 flex-wrap">
                    <div class="pagination-info mb-2 mb-md-0">
                        Showing <%= ((pagination.page - 1) * pagination.limit) + 1 %> to 
                        <%= Math.min(pagination.page * pagination.limit, pagination.totalOrders) %> 
                        of <%= pagination.totalOrders %> orders
                    </div>
                    
                    <nav aria-label="Sales report pagination" class="mb-2 mb-md-0">
                        <ul class="pagination mb-0">
                            <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                                <a class="page-link" href="#" onclick="changePage(1)" aria-label="First">
                                    <span aria-hidden="true">&laquo;&laquo;</span>
                                </a>
                            </li>
                            
                            <li class="page-item <%= !pagination.hasPrev ? 'disabled' : '' %>">
                                <a class="page-link" href="#" onclick="changePage(<%= pagination.page - 1 %>)" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            <% for(let i = Math.max(1, pagination.page - 2); i <= Math.min(pagination.totalPages, pagination.page + 2); i++) { %>
                                <li class="page-item <%= pagination.page === i ? 'active' : '' %>">
                                    <a class="page-link" href="#" onclick="changePage(<%= i %>)"><%= i %></a>
                                </li>
                            <% } %>

                            <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                                <a class="page-link" href="#" onclick="changePage(<%= pagination.page + 1 %>)" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>

                            <li class="page-item <%= !pagination.hasNext ? 'disabled' : '' %>">
                                <a class="page-link" href="#" onclick="changePage(<%= pagination.totalPages %>)" aria-label="Last">
                                    <span aria-hidden="true">&raquo;&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>

                    <div class="d-flex align-items-center">
                        <label class="me-2">Per page:</label>
                        <select class="form-select form-select-sm per-page-select" onchange="changeLimit(this.value)">
                            <% [10, 25, 50, 100].forEach(size => { %>
                                <option value="<%= size %>" <%= pagination.limit === size ? 'selected' : '' %>>
                                    <%= size %>
                                </option>
                            <% }) %>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const periodSelect = document.getElementById('period');
    const customDates = document.querySelectorAll('.custom-dates');
    
    function toggleCustomDates() {
        const isCustom = periodSelect.value === 'custom';
        customDates.forEach(el => {
            el.style.display = isCustom ? 'block' : 'none';
        });
    }
    
    periodSelect.addEventListener('change', toggleCustomDates);
    toggleCustomDates();
});

function downloadReport(format) {
    const period = document.getElementById('period').value;
    const startDate = document.getElementById('startDate').value;
    const endDate = document.getElementById('endDate').value;
    
    let url = `/admin/sales-report/download?format=${format}&period=${period}`;
    if (period === 'custom' && startDate && endDate) {
        url += `&startDate=${startDate}&endDate=${endDate}`;
    }
    
    window.location.href = url;
}

function changePage(page) {
    const form = document.getElementById('filter-form');
    form.querySelector('input[name="page"]').value = page;
    form.submit();
}

function changeLimit(limit) {
    const form = document.getElementById('filter-form');
    form.querySelector('input[name="limit"]').value = limit;
    form.querySelector('input[name="page"]').value = 1; 
    form.submit();
}

</script>
<%- include("../../views/partials/admin/footer") %>