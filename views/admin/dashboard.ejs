<!-- views/admin/dashboard.ejs -->

<%- include("../../views/partials/admin/header") %>
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f7f9fc;
        color: #333;
    }

    h1, h5 {
        color: #0000;
        font-weight: 600;
    }

    .nav-link {
        color: #555;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .nav-link:hover {
        color: #0000;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .card:hover {
        transform: scale(1.02);
        box-shadow: 0px 6px 16px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-weight: 500;
    }

    .form-select {
        border-radius: 8px;
        background-color: #ffffff;
        box-shadow: 0px 2px 6px rgba(0, 0, 0, 0.05);
        transition: border-color 0.3s ease;
    }

    .form-select:focus {
        border-color: #0000;
        box-shadow: #0000;
    }

    canvas {
        background: linear-gradient(to top, #ffffff, #f7f9fc);
        border-radius: 10px;
    }
a{
       font-size: 25px; 
       color:black;
        font-weight:  500;
       font-family: monospace;
    }
</style>

<div class="container-fluid mt-4">
    <h1  style="font-size: 32px; color:black; font-weight: 600; font-family: Verdana, Geneva, Tahoma, sans-serif;" class="mb-4">Admin Dashboard</h1>
    <ul class="nav flex-column">
       
        <li class="nav-item">
            <a href="/admin/sales-report">Sales Report</a>
        </li>
        <!-- Add other admin navigation items here -->
    </ul>
    <div class="row">
        <div class="col-lg-4">
            <div class="card card-body mb-4" style="border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.05);">
                <article class="icontext">
                    <div class="text">
                        <h6 class="mb-1" style="color: #666">Total Revenue</h6>
                        <span style="font-size: 28px; color:black; font-weight: 600">₹<%= totalOrderAmount %></span>
                    </div>
                </article>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card card-body mb-4" style="border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.05);">
                <article class="icontext">
                    <div class="text">
                        <h6 class="mb-1" style="color: #666">Total Orders</h6>
                        <span style="font-size: 28px;  color:black; font-weight: 600"><%= totalSalesCount %></span>
                    </div>
                </article>
            </div>
        </div>
       
    </div>

    <div class="card mb-4" style="border-radius: 10px; box-shadow: black">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="card-title mb-0" style="color: black">Sales Statistics</h5>
                <select class="form-select" id="timeRange" style="width: auto; border-color:black; color:black; max-width: 200px">
                    <option value="monthly">Monthly</option>
                    <option value="weekly">Weekly</option>
                    <option value="yearly">Yearly</option>
                </select>
            </div>
            <div style="height: 400px;">
                <canvas id="salesChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Best-Selling Products, Categories, Brands Charts -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card" style="border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.05);">
                <div class="card-body">
                    <h5 class="card-title" style="color: black">Best-Selling Products</h5>
                    <div style="height: 300px;">
                        <canvas id="bestSellingProductsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card" style="border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.05);">
                <div class="card-body">
                    <h5 class="card-title" style="color:black">Best-Selling Categories</h5>
                    <div style="height: 300px;">
                        <canvas id="bestSellingCategoriesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card" style="border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.05);">
                <div class="card-body">
                    <h5 class="card-title" style="color:black">Best-Selling Brands</h5>
                    <div style="height: 300px;">
                        <canvas id="bestSellingBrandsChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
<!-- Scripts -->
<script src="/js/vendors/jquery-3.6.0.min.js"></script>
<script src="/js/vendors/bootstrap.bundle.min.js"></script>
<script src="/js/vendors/select2.min.js"></script>
<script src="/js/vendors/chart.js"></script>
<script src="/js/main.js"></script>

<script>
    const orders = <%- JSON.stringify(orders) %>;
    const bestSellingProducts = <%- JSON.stringify(bestSellingProducts) %>;
    const bestSellingCategories = <%- JSON.stringify(bestSellingCategories) %>;
    const bestSellingBrands = <%- JSON.stringify(bestSellingBrands) %>;
    const weeklyData = <%- JSON.stringify(weekly) %>;
    const monthlyData = <%- JSON.stringify(monthly) %>;
    const yearlyData = <%- JSON.stringify(yearly) %>;

    document.addEventListener('DOMContentLoaded', function() {
        initializeSalesChart('monthly');
        initializeBestSellingProductsChart();
        initializeBestSellingCategoriesChart();
        initializeBestSellingBrandsChart();

        document.getElementById('timeRange').addEventListener('change', function(e) {
            initializeSalesChart(e.target.value);
        });
    });

 // Example for Sales Chart
function initializeSalesChart(timeRange) {
    const ctx = document.getElementById('salesChart').getContext('2d');
    let data, labels;

    switch (timeRange) {
        case 'weekly':
            data = weeklyData.data;
            labels = weeklyData.labels;
            break;
        case 'yearly':
            data = yearlyData.data;
            labels = yearlyData.labels;
            break;
        default:
            data = monthlyData.data;
            labels = monthlyData.labels;
    }

    if (window.salesChart instanceof Chart) {
        window.salesChart.destroy();
    }

    const gradient = ctx.createLinearGradient(0, 0, 0, 400);
    gradient.addColorStop(0, 'rgba(12, 151, 127, 0.4)');
    gradient.addColorStop(1, 'rgba(12, 151, 127, 0)');

    window.salesChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Sales Amount',
                data: data,
                fill: true,
                borderColor: '#92C5F9',
                backgroundColor: gradient,
                tension: 0.4
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                x: {
                    grid: {
                        drawBorder: false,
                        display: false
                    }
                },
                y: {
                    beginAtZero: true,
                    ticks: {
                        callback: function (value) {
                            return '₹' + value.toLocaleString('en-IN');
                        }
                    },
                    grid: {
                        drawBorder: false,
                        color: 'rgba(0, 0, 0, 0.05)'
                    }
                }
            }
        }
    });
}

    function initializeBestSellingProductsChart() {
        const ctx = document.getElementById('bestSellingProductsChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: bestSellingProducts.map(p => p.productName),
                datasets: [{
                    label: 'Units Sold',
                    data: bestSellingProducts.map(p => p.totalSalesCount),
                    backgroundColor: [
                        '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
                        '#FF9F40', '#FF6B81', '#45AAF2', '#2ED573', '#FFA502'
                    ]
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    }
    function initializeBestSellingCategoriesChart() {
    const ctx = document.getElementById('bestSellingCategoriesChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: bestSellingCategories.map(c => c.name), // Category names
            datasets: [{
                label: 'Total Sales',
                data: bestSellingCategories.map(c => c.totalQuantity), // Sales count
                backgroundColor: [
                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF'
                ],
                borderColor: [
                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF'
                ],
                borderWidth: 1
            }]
        },
        options: {
            indexAxis: 'y', // Horizontal bar
            plugins: {
                legend: {
                    display: false,
                }
            },
            responsive: true,
            scales: {
                x: {
                    beginAtZero: true
                }
            }
        }
    });
}
function initializeBestSellingBrandsChart() {
    const ctx = document.getElementById('bestSellingBrandsChart').getContext('2d');
    new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: bestSellingBrands.map(b => b.brandName), // Brand names
            datasets: [{
                data: bestSellingBrands.map(b => b.totalQuantity), // Sales count
                backgroundColor: [
                    '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
                    '#FF9F40', '#FF6B81', '#45AAF2', '#2ED573', '#FFA502'
                ],
                hoverOffset: 4
            }]
        },
        options: {
            plugins: {
                legend: {
                    position: 'right',
                }
            },
            responsive: true,
            maintainAspectRatio: false
        }
    });
}

</script>

